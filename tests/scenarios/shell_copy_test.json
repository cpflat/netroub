{
    "scenarioName": "shell_copy_test",
    "logPath": "./test_logs",
    "topo": "./tests/topology/minimal_delay_test.yaml",
    "data": "./tests/data/minimal_data.json",
    "duration": "30s",
    "hosts": ["r1", "r2"],
    "event": [
        {
            "beginTime": "5s",
            "type": "shell",
            "host": "r1",
            "shellCommands": [
                "echo 'shell test output' > /tmp/shell_output.txt",
                "hostname >> /tmp/shell_output.txt",
                "date >> /tmp/shell_output.txt"
            ]
        },
        {
            "beginTime": "10s",
            "type": "copy",
            "host": "r1",
            "fromContainer": [
                {"src": "/tmp/shell_output.txt", "dst": "./test_logs/"}
            ]
        }
    ]
}
